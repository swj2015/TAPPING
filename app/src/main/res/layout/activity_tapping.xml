<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tapping"
    tools:context=".view.MainActivity">


    <TextView
        android:id="@+id/item"
        android:layout_width="326dp"
        android:layout_height="46dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="58dp"
        android:fontFamily="@font/font1"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemimage"
        tools:text="비트가루세제 4kg" />

    <TextView
        android:id="@+id/price"
        android:layout_width="113dp"
        android:layout_height="40dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="271dp"
        android:fontFamily="@font/font1"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item"
        tools:text="9800원" />


    <TextView
        android:id="@+id/number"
        android:layout_width="41dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="3dp"
        android:fontFamily="@font/font1"
        android:gravity="top|center_vertical"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintStart_toEndOf="@+id/subtract"
        app:layout_constraintTop_toBottomOf="@+id/price"
        tools:text="2" />

    <TextView
        android:id="@+id/totalprice"
        android:layout_width="108dp"
        android:layout_height="45dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/font1"
        android:gravity="right|center_vertical"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plus"
        app:layout_constraintTop_toBottomOf="@+id/item"
        tools:text="19600원" />

    <ImageView
        android:id="@+id/subtract"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/extra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <ImageView
        android:id="@+id/plus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/number"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <ImageView
        android:id="@+id/extra"
        android:layout_width="316dp"
        android:layout_height="60dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="12dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="317dp"
        android:layout_height="61dp"

        android:layout_marginStart="46dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:background="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/extra" />

    <ImageView
        android:id="@+id/itemimage"
        android:layout_width="326dp"
        android:layout_height="341dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

